# ─── Server ───
PORT=3001
NODE_ENV=development

# ─── Database ───
DATABASE_URL=postgresql://user:password@localhost:5432/ercag_db
# Supabase/PlanetScale gibi connection pooling kullanan DB'ler için:
DIRECT_URL=postgresql://user:password@localhost:5432/ercag_db

# ─── JWT ───
JWT_SECRET=your-super-secret-jwt-key-change-this

# ─── Frontend URL (CORS + Email linkleri) ───
FRONTEND_URL=http://localhost:3000

# ─── Redis (opsiyonel — false ise memory fallback kullanılır) ───
USE_REDIS=false
REDIS_URL=redis://127.0.0.1:6379

# ─── Email (SMTP) ───
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM="Erçağ Kırtasiye" <noreply@ercagkirtasiye.com>

# ─── SMS (NetGSM) ───
NETGSM_USERCODE=
NETGSM_PASSWORD=
NETGSM_HEADER=ERCAGKIRT

# ─── WhatsApp Business API (opsiyonel) ───
WHATSAPP_API_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
